#!/usr/bin/env ruby

require 'optparse'
require 'hosts_updater'

options = {}

OptionParser.new do |opts|
  opts.banner = "Usage: hosts-updater [options]"

  opts.on("-h", "--help", "Show this message") do
    puts opts
    exit
  end

  opts.on("-u", "--[no-]update", "Update sources") do |u|
    options[:update] = u
  end

  HostsUpdater::SOURCES.each do |source_key, source_data|
    opts.on("--skip-#{source_key}", "Skip downloading #{source_data[0]} (#{source_data[1]})") do |s|
      options[source_key] = false
    end
  end

  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options[:verbose] = v
  end
end.parse!

HostsUpdater.new(options).run
